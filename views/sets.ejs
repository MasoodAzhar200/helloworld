<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LEGO Sets</title>
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/_navbar') %>
    <div class="container mx-auto">
        <h1 class="text-xl font-bold my-4">LEGO Sets Collection</h1>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <% sets.forEach(function(set) { %>
                <div class="card rounded overflow-hidden shadow-lg">
                    <img class="w-full" src="<%= set.img_url %>" alt="<%= set.name %>">
                    <div class="px-6 py-4">
                        <div class="font-bold text-xl mb-2"><%= set.name %></div>
                        <p class="text-gray-700 text-base">
                            Year: <%= set.year %><br>
                            Theme: <%= set.Theme.name %><br>
                            Pieces: <%= set.num_parts %>
                        </p>
                        <a href="/lego/editSet/<%= set.set_num %>" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4">Edit</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>